<div class="container">
  <div class="intro">
    <h3>My favours</h3>
  </div>
  <div class="status">
    <% @contracts.each do |c| %>
      <div class="card">
        <div class="card-body">
          <p class="card-text">Task: <%= c.favour.name %></p>
          <p class="card-text"><%= c.favour.description %></p>
          <p class="card-text"><%= c.favour.location %></p>
        </div>
        <%= link_to "Annuler la mission", favour_contract_path(c.favour, c), method: :delete %>
      </div>
    <% end %>
  </div>
</div>
