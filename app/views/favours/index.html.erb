<div class="banner w-100" style="background-image: url(https://images.unsplash.com/photo-1566041510394-cf7c8fe21800?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2434&q=80);">
  <div style="margin-left: auto; margin-right: auto;">
    <%= image_tag "Favours_rond.png", alt: "alttext",class: "image-clin" %>
  </div>
  <div class="arrow bounce">
    <p class="fa fa-arrow-down fa-2x"></p>
  </div>
</div>

<div class="categ">
  <!-- Mettre des petites icones comme trip advisor -->
</div>

<div class="container">
  <div class="intro">
    <h1 class="title">How would you like to help today?</h1> <br><br>
    <div class="dropdown">
      <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% @categories.each do |cat| %>
          <%= link_to "<li class='dropdown-item'>#{cat.name}</li>".html_safe, favours_path(category: cat.id)  %>
        <% end %>


      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-7">

      <div class="welcome">
        <% if user_signed_in? %>
          <%if current_user.profile_picture.attached? %>
            <%= cl_image_tag current_user.profile_picture.key %>
            <div class="card-welcome-infos">
              <div class="welcome-text ml-5">
                <h1>Welcome <%= current_user.first_name %></h1>
                <p>How would you like to help today?</p>
              </div>
            </div>
          <% else %>

            <div class="card-welcome-infos">
              <div class="welcome-text ml-5">
                <h1>Welcome <%= current_user.first_name %></h1>
                <p>How would you like to help today?</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= image_tag "Favours.png" %>
          <div class="card-welcome-infos">
            <div class="welcome-text ml-5">
              <h1>Welcome</h1>
              <p>How would you like to help today?</p>
              <%= link_to 'Sign up', new_user_session_path, class: 'btn btn-outline-primary'  %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="cards">
        <% @favours.each do |f| %>
          <%= link_to favour_path(f) do %>
          <div class="card-index hvr-grow">
            <div class="row">
              <div class="col-6">
                <h5><%= f.name %></h5>
              </div>
              <div class="col-6 text-right">
                <p><%= humanized_money_with_symbol(f.price * 100) %></p>
                <p><%= f.start_time.strftime("%d.%m.%Y") %></p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-5 pl-0 map-container"
      id="map"
      style=" position: sticky;
      width: 100%;
      height: 600px;"
      data-page="index"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
