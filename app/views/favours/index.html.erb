<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1531206715517-5c0ba140b2b8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80);">
  <div class="container">
    <h1>Favours</h1>
    <p>Help your neighbours</p>
    <a class="btn btn-ghost" href="#">Join us</a>
  </div>
</div>

<div class="container">
  <div class="intro">
    <h1 class="title">How would you like to help today?</h1> <br><br>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-7 cards">
      <% @favours.each do |f| %>
        <%= link_to favour_path(f) do %>
          <div class="card-favour">
            <div class="card-body">
              <div class="card-right">
                <h5 class="card-title"><%= f.name %></h5>
              </div>
              <div class="card-body">
                <p class="card-text"><%= f.start_time %></p>
                <p class="card-text"><small><%= f.price %> CHF</small></p>
              </div>
            </div>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="col-5 map-container">
      <p>Ceci est une carte</p>
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>
