<div class="banner w-100" style="background-color: #E2E2E2;">
  <div class="row">
    <div class="col-4">
      <%= image_tag "Favours-slogan.png", alt: "alttext",class: "image-clin" %>
    </div>
    <div class="col-4">
      <%= image_tag "Favours-logo-fille.png", alt: "alttext", class: "image-clin" %>
    </div>
    <div class="col-4 d-flex align-content-center flex-wrap">
      <a class="btn btn-outline-primary" href="#">Join us</a>
    </div>
  </div>
</div>

<div class="container">
  <div class="intro">
    <h1 class="title">How would you like to help today?</h1> <br><br>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-7 cards">
      <% @favours.each do |f| %>
        <%= link_to favour_path(f) do %>
          <div class="card-favour">
            <div class="card-body">
              <div class="card-right">
                <h5 class="card-title"><%= f.name %></h5>
              </div>
              <div class="card-body">
                <p class="card-text"><%= f.start_time %></p>
                <p class="card-text"><small><%= f.price %> CHF</small></p>
              </div>
            </div>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="col-5 pl-0 map-container"
      id="map"
      style=" position: sticky;
      width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
