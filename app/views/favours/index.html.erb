  <div class="row">
    <div class="col-7">

      <div class="welcome">
        <% if user_signed_in? %>
          <%if current_user.profile_picture.attached? %>
            <%= cl_image_tag current_user.profile_picture.key %>
            <div class="card-welcome-infos">
              <div class="welcome-text ml-5">
                <h1>Welcome <%= current_user.first_name %></h1>
                <p>How would you like to help today?</p>
              </div>
            </div>
          <% else %>

            <div class="card-welcome-infos">
              <div class="welcome-text ml-5">
                <h1>Welcome <%= current_user.first_name %></h1>
                <p>How would you like to help today?</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= image_tag "Favours.png" %>
          <div class="card-welcome-infos">
            <div class="welcome-text ml-5">
              <h1>Welcome</h1>
              <p>How would you like to help today?</p>
              <%= link_to 'Sign up', new_user_session_path, class: 'btn btn-outline-primary'  %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="cards">
        <% @favours.each do |f| %>
          <%= link_to favour_path(f) do %>
          <div class="card-index hvr-grow">
            <div class="row">
              <div class="col-6">
                <h5><%= f.name %></h5>
                <p><%= f.category.icons.html_safe %></p>
              </div>
              <div class="col-6 text-right">
                <p><%= humanized_money_with_symbol(f.price * 100) %></p>
                <p><%= f.start_time.strftime("%d.%m.%Y") %></p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-5 pl-0 map-container"
      id="map"
      style=" position: sticky;
      width: 100%;
      height: height: 100vh;"
      data-page="index"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

