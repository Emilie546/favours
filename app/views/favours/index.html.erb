<div class="banner w-100" style="background-image: url(https://images.unsplash.com/photo-1566041510394-cf7c8fe21800?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2434&q=80);">
  <div class="row">
    <div style="margin-left: auto; margin-right: auto;">
      <%= image_tag "Favours_rond.png", alt: "alttext",class: "image-clin" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="intro">
    <h1 class="title">How would you like to help today?</h1> <br><br>
    <div class="dropdown">
      <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-7 cards">
      <% @favours.each do |f| %>
        <%= link_to favour_path(f) do %>
          <div class="card-favour">
            <div class="card-body">
              <div class="card-right">
                <h5 class="card-title"><%= f.name %></h5>
              </div>
              <div class="card-body">
                <p class="card-text"><%= f.start_time %></p>
                <p class="card-text"><small><%= humanized_money_with_symbol(f.price) %></small></p>
              </div>
            </div>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="col-5 pl-0 map-container"
      id="map"
      style=" position: sticky;
      width: 100%;
      height: 600px;"
      data-page="index"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
