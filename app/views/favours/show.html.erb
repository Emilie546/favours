<div class="container">
  <div class="flex-display">
    <div class="favour-show-card">
      <h1><%= @favour.name %></h1>

      <p><%= @favour.description %></p>
      <p><%= @favour.location %></p>
      <p class = "price"><%= humanized_money_with_symbol(@favour.price) %></p>

      <%= link_to "Back", favours_path, class: 'btn btn-dark btn-sm text-white' %>


      <h4><strong> Accept <%= @favour.name %></strong></h4>
      <%= render 'contracts/new', favour: @favour, contract: @contract %>
    </div>

    <div class="user-favour-card">
      <p>This is the user information card</p>
    </div>
  </div>
  <div class="map-show-card">
    <p>Ceci est une carte</p>
    <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
  </div>
</div>
