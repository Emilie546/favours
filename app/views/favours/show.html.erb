<div class="container">
  <div class="title">
    <h1 class="text-center mt-3"><%= @favour.name %></h1>
    <%= link_to "Back", favours_path, class: 'btn btn-outline-primary text-left' %>
  </div>

  <div class="flex-display">
    <div class="favour-show-card mr-3">
      <div class="row">
        <div class="col-6">
          <p><%= @favour.location %></p>
          <p><%= @favour.description %></p>
          <h5>Accept <%= @favour.name %></h5>
        </div>
        <div class="col-6">
          <p class = "price text-right"><%= @favour.price %> CHF</p>
          <%= render 'contracts/new', favour: @favour, contract: @contract %>
        </div>
      </div>
    </div>

    <div class="user-favour-card ml-3">
      <p>This is the user information card</p>
    </div>
  </div>

  <div class="map-show-card">
    <p class="text-center mt-3">Approximate distance : 1km</p>
    <div
        id="map"
        style="width: 100%;
        height: 500px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
  </div>
</div>
