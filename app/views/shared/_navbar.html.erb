<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-home">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Favours.png", class: 'avatar' %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto list-inline tabs-underlined">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Contracts", contracts_path, class: "nav-link tab-underlined" %>
        </li>
        <li class="nav-item">
          <%= link_to "Favours", my_favours_path, class: "nav-link tab-underlined" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Favour", new_favour_path, class: "nav-link tab-underlined" %>
        </li>
        <li class="nav-item dropdown">
          <%if current_user.profile_picture.attached? %>
            <%= cl_image_tag current_user.profile_picture.key, width: 40, height: 40, gravity: :face, crop: :thumb, :zoom=>1.1, class: 'avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "Favours.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

